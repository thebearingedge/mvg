$units  = 12
$gutter = 1rem
$xs     = 28rem
$sm     = 56rem
$md     = 84rem
$lg     = 112rem

columns($size)
  for $unit in 1..$units
    .col-{$size}-{$unit}
      width 'calc(%s% - %s)' % (($unit / $units * 100) $gutter)
    .col-{$size}-offset-{$unit}
      margin-left '%s%' % ($unit / $units * 100)

.grid
  margin 0 ($gutter / 2)

.row
  float left
  overflow hidden

.col
  margin-top $gutter
  padding 0 ($gutter / 2)
  float left

