$units  = 12
$gutter = 1.5rem
$xs     = 48rem
$sm     = 62rem
$md     = 75rem
$lg     = 87rem

columns($size)
  for $unit in 1..$units
    .col-{$size}-{$unit}
      width 'calc(%s% - %s)' % (($unit / $units * 100) $gutter)
    .col-{$size}-offset-{$unit}
      margin-left '%s%' % ($unit / $units * 100)

.grid-fluid
  margin auto

.grid
  @extends .grid-fluid
  @media screen and (min-width: $xs)
    max-width: $xs - (2 * $gutter)
  @media screen and (min-width: $sm)
    max-width: $sm - (2 * $gutter)
  @media screen and (min-width: $md)
    max-width: $md - (2 * $gutter)

.row
  width 100%
  overflow hidden

.col-xs-1,
.col-xs-2,
.col-xs-3,
.col-xs-4,
